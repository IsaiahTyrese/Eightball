let userName = 'Isaiah';
const userQuestion = 'Will I see heaven?'
const randomNumber = (Math.floor(Math.random() * 8))
let eightBall = '3'

userName ? console.log(`Hello, ${userName}!`) : console.log('Hello!')
console.log(`${userName} asked: ${userQuestion}`)

switch(randomNumber) {
  case 0:
  console.log('It is certain');
  break;
  case 1:
  console.log('Hell no');
  break;
  case 2:
  console.log('Shit maybe');
  break;
  case 3:
  console.log('Yes');
  break;
  case 4:
  console.log('try again');
  break;
  case 5:
  console.log('Ask someone else');
  break;
  case 6:
  console.log('Sorry');
  break;
  case 7:
  console.log('Fosho');
  break;
}
console.log(`The ball has chosen: ${eightBall}!`)
